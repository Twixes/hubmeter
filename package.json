{
  "name": "hubmeter",
  "description": "GitHub activity insights you haven't seen before",
  "license": "MPL-2.0",
  "author": "Twixes",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/Twixes/hubmeter/issues",
    "email": "dev@twixes.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twixes/hubmeter.git"
  },
  "homepage": "https://hubmeter.live",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "start": "react-scripts start",
    "lint": "standardx '**/*.{ts,tsx}' --verbose | snazzy",
    "fix": "standardx '**/*.{ts,tsx}' --fix",
    "test": "npm run lint && react-scripts test"
  },
  "dependencies": {
    "@react-hook/size": "^2.1.0",
    "@sentry/browser": "^5.18.0",
    "@testing-library/jest-dom": "^5.10.0",
    "@testing-library/react": "^10.3.0",
    "@testing-library/user-event": "^12.0.2",
    "focus-visible": "^5.1.0",
    "framer-motion": "^1.11.1",
    "node-sass": "^4.14.1",
    "posthog-js": "1.3.2",
    "react": "^16.13.1",
    "react-cookie": "^4.0.3",
    "react-dom": "^16.13.1",
    "react-error-boundary": "^2.2.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1",
    "recoil": "^0.0.10",
    "reselect": "^4.0.0",
    "sanitize.css": "^11.0.1",
    "svg-round-corners": "^0.1.0",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.38",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "snazzy": "^8.0.0",
    "standardx": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "standardx --fix"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
