{
  "name": "hubmeter",
  "description": "GitHub activity insights you haven't seen before",
  "license": "MPL-2.0",
  "author": "Twixes",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/Twixes/hubmeter/issues",
    "email": "dev@twixes.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twixes/hubmeter.git"
  },
  "homepage": "https://hubmeter.live",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "start": "react-scripts start",
    "lint": "standardx '**/*.{js,jsx,ts,tsx}' --verbose | snazzy",
    "fix": "standardx '**/*.{js,jsx,ts,tsx}' --fix",
    "test": "yarn lint && react-scripts test"
  },
  "dependencies": {
    "@react-hook/size": "^2.1.1",
    "@sentry/browser": "^5.27.4",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.1.2",
    "@testing-library/user-event": "^12.2.2",
    "focus-visible": "^5.2.0",
    "framer-motion": "^2.9.4",
    "posthog-js": "1.6.0",
    "react": "^16.14.0",
    "react-cookie": "^4.0.3",
    "react-dom": "^16.14.0",
    "react-error-boundary": "^3.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.4",
    "recoil": "^0.1.2",
    "reselect": "^4.0.0",
    "sanitize.css": "^12.0.1",
    "sass": "^1.29.0",
    "svg-round-corners": "^0.1.0",
    "typescript": "^3.9.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "eslint": "^6.6.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "snazzy": "^9.0.0",
    "standardx": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "standardx --fix"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
