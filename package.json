{
  "name": "hubmeter",
  "description": "GitHub activity insights in terms of time",
  "license": "MPL-2.0",
  "author": "Twixes",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/Twixes/hubmeter/issues",
    "email": "dev@twixes.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twixes/hubmeter.git"
  },
  "homepage": "https://hubmeter.live",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.10.0",
    "@testing-library/react": "^10.2.1",
    "@testing-library/user-event": "^11.4.2",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "snazzy": "^8.0.0",
    "standardx": "^5.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "standardx **/*.{ts,tsx} --verbose | snazzy && react-scripts test",
    "fix": "standardx **/*.{ts,tsx} --fix"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "react/jsx-tag-spacing": [
        "error",
        {
          "closingSlash": "never",
          "beforeSelfClosing": "never",
          "afterOpening": "never",
          "beforeClosing": "never"
        }
      ],
      "space-before-function-paren": [
        "error",
        {
          "named": "never"
        }
      ],
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
